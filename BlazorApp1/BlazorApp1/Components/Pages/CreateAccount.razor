            <InputText id="newUsername" @bind-Value="createAccountModel.Username" />

            <label for="newPassword">New Password</label>
            <InputText id="newPassword" @bind-Value="createAccountModel.Password" type="password" />
        </div>

        <button type="button">Create Account</button>
    </EditForm>
</div>

